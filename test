                                                                                                                                                                                            });

                                                                                                                                                                                                // Adjust volume
                                                                                                                                                                                                    $('#myVideo').on('input', function() {
                                                                                                                                                                                                                this.volume = $(this).val() / 100;
                                                                                                                                                                                                    });
                                                                                                                                                                                });
